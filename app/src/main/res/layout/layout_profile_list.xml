<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androidfinalproject.lior.finalproject.Home.MainFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/profile_list_relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
        <ListView
            android:id="@+id/profile_list_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <ProgressBar
            android:id="@+id/profile_list_progressbar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="103dp"
            android:layout_marginTop="192dp" />

        <RelativeLayout
            android:id="@+id/profile_list_relLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relLayout1">

            <include layout="@layout/layout_viewpage_center"/>
        </RelativeLayout>


    </RelativeLayout>



</FrameLayout>
